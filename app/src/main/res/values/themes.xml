<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotOne" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- App Colors. -->
<!--        <item name="colorPrimary">@color/green_1</item>-->
        <item name="colorSecondary">@color/teal_1</item>
        <item name="colorPrimaryVariant">@color/red_1</item>
        <item name="colorCanvas">@color/white</item>
        <item name="colorText">@color/black</item>

        <!-- Referenced -->
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="colorOnPrimary">?attr/colorCanvas</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryVariant">?attr/colorSecondary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
<!--        <item name="android:navigationBarColor">@color/white</item>-->

        <!-- translucent bottom hotbar -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>

        <!-- toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="preferenceTheme">@style/AppPreferenceThemeOverlay</item>

    </style>
</resources>